<h1><%= t('.title') %></h1>

<%= form_tag flyings_path, method: :create, remote: true do %>
  <table class="table">
    <thead>
      <tr>
        <th><%= t('.flight') %></th>
        <th><%= t('.status') %></th>
        <th><%= t('.status_history') %></th>
        <th><%= t('.accept') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @planes.each do |plane| %>
        <tr>
          <td><%= plane.flight %></td>
          <td><%= t("plane.status.#{plane.status}") %></td>
          <td><%= simple_format(plane.status_history) %></td>
          <td><%= check_box_tag('plane_ids[]', plane.id, false, disabled: !plane.in_the_room?) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="actions">
    <%= submit_tag t('.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
